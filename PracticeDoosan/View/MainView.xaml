<Window x:Class="PracticeDoosan.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeDoosan.View"
        xmlns:c="clr-namespace:PracticeDoosan.Converter"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainView" Height="560" Width="975" Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <c:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        <c:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <c:BoolToStringServoConverter x:Key="BoolToStringServoConverter"/>
        <c:BoolToColorServoConverter x:Key="BoolToColorServoConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="185*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">
                    <TextBlock Text="IP : " Margin="5, 0, 0, 0" Grid.Row="0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding IP, Mode=TwoWay}" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5"/>
                </DockPanel>

                <DockPanel Grid.Row="1" Margin="5">
                    <Border Background="#2196F3" CornerRadius="10" BorderBrush="#1976D2" BorderThickness="1" Height="30" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{StaticResource ButtonShadow}">
                        <ui:Button Content="{Binding IsConnected, Converter={StaticResource BoolToStringConverter}}" Command="{Binding ConnectionCommand}" Background="Transparent" BorderThickness="0" Foreground="White" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Cursor="Hand" Style="{StaticResource RippleButtonStyle}"/>
                    </Border>
                </DockPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5" Command="{Binding ServoControlCommand}" Height="70" Content="{Binding IsServoOn, Converter={StaticResource BoolToStringServoConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding IsServoOn, Converter={StaticResource BoolToColorServoConverter}}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                                                <Grid ClipToBounds="True">
                                                    <!-- Ripple -->
                                                    <Ellipse x:Name="RippleEllipse" Fill="White" Opacity="0" Width="0" Height="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                        <Ellipse.RenderTransform>
                                                            <ScaleTransform/>
                                                        </Ellipse.RenderTransform>
                                                    </Ellipse>

                                                    <!-- 버튼 Content -->
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.85"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </Trigger>
                                                <EventTrigger RoutedEvent="PreviewMouseDown">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="RippleEllipse" Storyboard.TargetProperty="Width" From="0" To="150" Duration="0:0:0.3"/>
                                                            <DoubleAnimation Storyboard.TargetName="RippleEllipse" Storyboard.TargetProperty="Height" From="0" To="150" Duration="0:0:0.3"/>
                                                            <DoubleAnimation Storyboard.TargetName="RippleEllipse" Storyboard.TargetProperty="Opacity" From="0.5" To="0" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Button Grid.Column="1"  Margin="5"  Content="🛑 STOP"  Command="{Binding StopCommand}"  FontSize="14"  Height="70" Style="{StaticResource RippleButtonStyle}" Background="Red"/>
            </Grid>
            <Border Grid.Column="2" Margin="5" Background="#1E1E1E" CornerRadius="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                <Border Background="#2D2D30"
                    CornerRadius="8"
                    Padding="8">
                    <StackPanel VerticalAlignment="Stretch">
                        <!-- 헤더 -->
                        <TextBlock Text="STATE" FontSize="14" FontWeight="Bold" Foreground="#64B5F6" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>

                        <!-- 상태 텍스트 -->
                        <TextBlock Text="{Binding State}" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="#1E1E1E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Joint Selection Section -->
                    <Border Height="120" Grid.Row="0" Background="#2D2D30" CornerRadius="10" Margin="15,15,15,10" Padding="5">
                        <StackPanel>
                            <TextBlock Text="JOINT SELECTION"  FontSize="14"  FontWeight="Bold"  Foreground="#61AFEF" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <UniformGrid Rows="2" Columns="3">
                                <RadioButton Content="J1"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J1, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                                <RadioButton Content="J2"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J2, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                                <RadioButton Content="J3"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J3, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                                <RadioButton Content="J4"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J4, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                                <RadioButton Content="J5"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J5, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                                <RadioButton Content="J6"  Margin="5" GroupName="JointGroup"  Foreground="White" FontSize="14" FontWeight="SemiBold" IsChecked="{Binding SelectedJoint, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=J6, Mode=TwoWay}">
                                    <RadioButton.Style>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Foreground" Value="#61AFEF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Speed Control Section -->
                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="10" Margin="15,10,15,10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Slider Grid.Row="1" Foreground="#61AFEF"  Margin="0,5,0,10"  Value="{Binding SpeedValue, Mode=TwoWay}"  Minimum="0"  Maximum="50" TickFrequency="1" IsSnapToTickEnabled="True" Height="25"/>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="SPEED: "  Foreground="#98C379"  FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SpeedValue}"  Foreground="White"  FontSize="16" FontWeight="Bold" MinWidth="30"/>
                                <TextBlock Text=" mm/s"  Foreground="#98C379"  FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- JOG + Button -->
                    <Border Grid.Row="2"  Margin="15,10,15,10" CornerRadius="10" Background="#2D2D30">
                        <ui:Button Content="JOG +"  Margin="10"  VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" FontSize="24" FontWeight="Bold" Appearance="Primary" Background="#4EC9B0" BorderBrush="#4EC9B0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowUp24" FontSize="24"/>
                            </ui:Button.Icon>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding PlusJogStartCommand}" CommandParameter="Positive"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding JogStopCommand}" CommandParameter="Positive"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ui:Button>
                    </Border>

                    <!-- JOG - Button -->
                    <Border Grid.Row="3" Margin="15,10,15,15" CornerRadius="10" Background="#2D2D30">
                        <ui:Button Content="JOG -"  Margin="10"  VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" FontSize="24" FontWeight="Bold" Appearance="Primary" Background="#E06C75" BorderBrush="#E06C75">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowDown24" FontSize="24"/>
                            </ui:Button.Icon>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding MinusJogStartCommand}" CommandParameter="Positive"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding JogStopCommand}" CommandParameter="Positive"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ui:Button>
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <ui:Button Content="⚙ Set Home"  Command="{Binding SetHomeCommand}"  Background="#2196F3" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5, 5, 2, 5" CornerRadius="8" Effect="{StaticResource ButtonShadow}" Style="{StaticResource DefaultButtonStyle}" Width="100" Height="40" />
                        <ui:Button Content="🏡 Go Home"  Command="{Binding GoHomeCommand}"  Background="#4CAF50" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="40" Margin="2, 5, 5, 5" CornerRadius="8" Style="{StaticResource DefaultButtonStyle}"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="12" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0" Margin="0,0,0,63">
                        <StackPanel>
                            <TextBlock Text="JOINT STATUS" FontSize="14" FontWeight="Bold" Foreground="#61AFEF" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock  Text="J1:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ1}" Grid.Row="0" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="J2:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ2}" Grid.Row="1" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="J3:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ3}" Grid.Row="2" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="J4:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ4}" Grid.Row="3" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="J5:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ5}" Grid.Row="4" Grid.Column="1" Margin="5"/>

                                <TextBlock Text="J6:" Grid.Row="5" Grid.Column="0" FontWeight="SemiBold" Margin="5"/>
                                <TextBlock Text="{Binding ValueJ6}" Grid.Row="5" Grid.Column="1" Margin="5"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- POSE 1-->
                <Grid Grid.Row="0">
                    <Border Background="#2D2D30"  CornerRadius="5"  Margin="5" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <Border Grid.Column="0"  Background="#3E3E42"  CornerRadius="3" Padding="5">
                                <TextBlock Text="POSE 1"  FontSize="11"  FontWeight="Bold"  Foreground="#61AFEF" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Border>

                            <!-- Joint Values (2x3 Grid) -->
                            <Grid Grid.Column="1" Margin="8,0,8,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- J1 -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J1:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[0], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J2 -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J2:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[1], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J3 -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J3:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[2], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J4 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J4:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[3], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J5 -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J5:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[4], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J6 -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J6:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose1[5], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <!-- Buttons -->
                            <StackPanel Grid.Column="2" Orientation="Vertical">
                                <ui:Button Content="GET"  Width="55" Height="30" FontSize="10" FontWeight="Bold" Margin="0,0,0,2" Padding="5,0" Command="{Binding GetPoseCommand}" CommandParameter="1"
                                           Style="{StaticResource DefaultButtonStyle}" Background="#39393c" Foreground="White"/>
                                <ui:Button Content="GO"  Width="55" Height="30" FontSize="10" FontWeight="Bold" Margin="0,2,0,0" Padding="5,0" Appearance="Primary" Command="{Binding GoPoseCommand}"  CommandParameter="1" Style="{StaticResource DefaultButtonStyle}" Background="#559ce4"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                <!-- POSE 2-->
                <Grid Grid.Row="1">
                    <Border Background="#2D2D30" CornerRadius="5" Margin="5" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <Border Grid.Column="0"  Background="#3E3E42"  CornerRadius="3" Padding="5">
                                <TextBlock Text="POSE 2"  FontSize="11"  FontWeight="Bold"  Foreground="#61AFEF" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Border>

                            <!-- Joint Values (2x3 Grid) -->
                            <Grid Grid.Column="1" Margin="8,0,8,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- J1 -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J1:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose2[0], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J2 -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J2:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose2[1], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J3 -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J3:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose2[2], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J4 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J4:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose2[3], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J5 -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="J5:" FontSize="11" Foreground="#98C379" FontWeight="Bold" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Pose2[4], StringFormat=F2}" FontSize="11" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="°" FontSize="8" Foreground="#7F8C8D" Margin="1,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- J6 -->
