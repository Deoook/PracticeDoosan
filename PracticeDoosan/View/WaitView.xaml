<Window x:Class="PracticeDoosan.View.WaitView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:PracticeDoosan.Converter"
        Title="WaitView" 
        Height="220" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Border Background="#212121" 
            CornerRadius="10" 
            BorderBrush="#2196F3" 
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="5" 
                            Opacity="0.3" 
                            BlurRadius="10"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding Message}" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"/>

            <ui:ProgressRing Grid.Row="1"
                             Width="80" 
                             Height="80"
                             Foreground="DodgerBlue"
                             IsIndeterminate="True"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"
                             Margin="0,15,0,15"/>

            <ProgressBar Grid.Row="2"
                         Value="{Binding Progress}"
                         Height="8"
                         Maximum="100"
                         Visibility="{Binding ShowProgress, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Margin="0,0,0,5"/>
        </Grid>
    </Border>
</Window>